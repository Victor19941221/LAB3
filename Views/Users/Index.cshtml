@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>
<table class="table table-striped mt-4">
    <thead class="bg-primary text-white">
        <tr>
            <td>Id</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>Username</td>
            <td>Roles</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@string.Join(", ", user.Roles.ToList())</td>
                <td>
                    <a href="@Url.Action("ManageRoles", new { id = user.Id })" class="btn btn-primary">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
